<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editThemTenNhanVien"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:inputType="textPersonName"
        android:hint="Nhập tên nhân viên"
        android:ems="10"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdGioiTinh"
        android:layout_alignLeft="@+id/editThemTenNhanVien"
        android:layout_alignRight="@+id/editThemTenNhanVien"
        android:layout_below="@+id/editThemTenNhanVien"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdNam"
            android:checked="true"
            android:layout_gravity="center"
            android:text="Nam"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdNu"
            android:checked="true"
            android:text="Nữ"/>

    </RadioGroup>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerPhongBan"
        android:layout_below="@+id/rdGioiTinh"
        android:layout_centerHorizontal="true">

    </Spinner>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editThemDiaChi"
        android:layout_below="@+id/spinnerPhongBan"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="Nhập địa chỉ"
        android:ems="10"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editThemSoDienThoai"
        android:layout_below="@+id/editThemDiaChi"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Nhập số điện thoại"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editThemNgaySinh"
        android:layout_below="@+id/editThemSoDienThoai"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="Nhập ngày sinh"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editThemEmail"
        android:ems="10"
        android:layout_below="@+id/editThemNgaySinh"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="Nhập địa chỉ email"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editThemLuong"
        android:layout_below="@+id/editThemEmail"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập lương"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnThemNhanVien"
        android:layout_alignLeft="@+id/editThemLuong"
        android:layout_below="@+id/editThemLuong"
        android:text="Thêm"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnThoatNhanVien"
        android:layout_alignBaseline="@+id/btnThemNhanVien"
        android:layout_alignBottom="@+id/btnThemNhanVien"
        android:layout_alignRight="@+id/editThemLuong"
        android:layout_marginRight="25dp"
        android:text="Thoát"/>

</RelativeLayout>