<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editSuaTenNhanVien"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:inputType="textPersonName"
        android:hint="Nhập tên nhân viên"
        android:ems="10"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdSuaGioiTinh"
        android:layout_alignLeft="@+id/editSuaTenNhanVien"
        android:layout_alignRight="@+id/editSuaTenNhanVien"
        android:layout_below="@+id/editSuaTenNhanVien"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdNam"
            android:checked="true"
            android:layout_gravity="center"
            android:text="Nam"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdNu"
            android:checked="true"
            android:text="Nữ"/>

    </RadioGroup>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerSuaPhongBan"
        android:layout_below="@+id/rdSuaGioiTinh"
        android:layout_centerHorizontal="true">

    </Spinner>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editSuaDiaChi"
        android:layout_below="@+id/spinnerSuaPhongBan"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="Nhập địa chỉ"
        android:ems="10"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editSuaSoDienThoai"
        android:layout_below="@+id/editSuaDiaChi"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Nhập số điện thoại"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editSuaNgaySinh"
        android:layout_below="@+id/editSuaSoDienThoai"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="Nhập ngày sinh"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editSuaEmail"
        android:ems="10"
        android:layout_below="@+id/editSuaNgaySinh"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="Nhập địa chỉ email"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editSuaLuong"
        android:layout_below="@+id/editSuaEmail"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập lương"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCapNhatNhanVien"
        android:layout_alignLeft="@+id/editSuaLuong"
        android:layout_below="@+id/editSuaLuong"
        android:text="Cập nhật"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnThoatSuaNhanVien"
        android:layout_alignBaseline="@+id/btnCapNhatNhanVien"
        android:layout_alignBottom="@+id/btnCapNhatNhanVien"
        android:layout_alignRight="@+id/editSuaLuong"
        android:layout_marginRight="25dp"
        android:text="Thoát"/>

</RelativeLayout>