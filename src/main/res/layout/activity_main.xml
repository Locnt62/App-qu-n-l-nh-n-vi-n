<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".MainActivity">

    <TextView android:text = "Quản lý nhân viên" android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/textview1"
        android:textSize = "35dp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true" />

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Đăng nhập"
        android:id = "@+id/viewDangNhap"
        android:layout_below = "@+id/textview1"
        android:layout_centerHorizontal = "true"
        android:textColor = "#ff7aff24"
        android:textSize = "35dp" />

    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/editTenDangNhap"
        android:hint = "@string/hinttendangnhap"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffff25e6"
        android:layout_marginTop = "46dp"
        android:layout_below = "@+id/viewDangNhap"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editMatKhau"
        android:layout_below="@+id/editTenDangNhap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTenDangNhap"
        android:layout_alignEnd="@+id/editTenDangNhap"
        android:textColorHint="#ffff299f"
        android:hint="Password" />





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/btnDangNhap"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/viewDangNhap"
        android:layout_toStartOf="@+id/viewDangNhap"
        android:onClick="DangNhap"
        android:layout_marginBottom="250dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnThoatDN"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/viewDangNhap"
        android:layout_toEndOf="@+id/viewDangNhap"
        android:layout_marginBottom="250dp"/>

</RelativeLayout>